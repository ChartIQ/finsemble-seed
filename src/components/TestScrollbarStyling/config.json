{
    "comment": "Sample component configuration",
    "$schema": "../../node_modules/@finsemble/finsemble-core/configs/schemas/fileBasedSchemas/componentsFile.schema.json",
    "components": {
        "TestScrollbarStyling": {
            "window": {
                "url": "$applicationRoot/components/TestScrollbarStyling/TestScrollbarStyling.html",
                "options": {
                    "resizable": true,
                    "autoShow": true,
                    "alwaysOnTop": false
                },
                "width": 800,
                "height": 600
            },
            "component": {
                "preload": [
					"$applicationRoot/preloads/zoom.js",
					"$applicationRoot/preloads/scrollbarStylingPreload.js"
				],
                "spawnOnStartup": false
            },
            "foreign": {
                "services": {
                    "windowService": {
                        "manageWindowMovement": true,
                        "allowAutoArrange": true,
                        "allowSnapping": true,
                        "allowTabbing": true,
                        "allowTiling": true,
                        "allowGrouping": true,
                        "allowMinimize": true
                    },
                    "workspace": {}
                },
                "components": {
                    "App Launcher": {
                        "launchableByUser": true
                    },
                    "Window Manager": {
                        "alwaysOnTopIcon": true,
                        "title": "TestScrollbarStyling",
                        "persistWindowState": true
                    }
                }
            }
        }
    }
}
