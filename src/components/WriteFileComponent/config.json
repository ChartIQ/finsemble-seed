            "allowSnapping": true,
            "allowTabbing": true,
            "allowTiling": true,
            "allowGrouping": true,
            "allowMinimize": true
          },
          "workspace": {}
        },
        "components": {
          "App Launcher": {
            "launchableByUser": true
          },
          "Window Manager": {
            "alwaysOnTopIcon": true,
            "title": "WriteFileComponent - Untrusted",
            "persistWindowState": true
          }
        }
      }
    }
  }
}
